
<Style>:
    # name_user:name_user
    # family_user:family_user
    # number_user:number_user
    user_photo:user_photo
    
    Screen:
        name:'background'
        Image:
            source:'background.jpg'
            allow_stretch:True
            keep_ratio:False         
    Screen:
        name:'main'
        MDAnchorLayout:
            name:'top-bar'
            anchor_y:'top'
            MDTopAppBar:
                size_hint:1,0.08
                title:'Messenger'
                left_action_items:[['information-slab-circle',lambda x:root.about(),'About']]
                right_action_items:[['microsoft-xbox-controller-menu',lambda x:meno.set_state('open'),'Information']]
    Screen:
        name:'main-menu'
        MDNavigationDrawer:
            id:meno 
            size_hint:0.36,1
            anchor: "right"
            ScrollView:
                MDList:
                    MDNavigationDrawerHeader:
                        id:user_photo
                        title:'USER'
                        source:'default-user.png'
                    MDNavigationDrawerDivider:                 
                    MDNavigationDrawerLabel:
                        id:name_user
                        text:'Name : '+str(root.user_info['name'])
                    MDNavigationDrawerLabel:
                        id:family_user
                        text:'Family : '+str(root.user_info['family'])
                    MDNavigationDrawerLabel:
                        id:number_user
                        text:'Number : '+str(root.user_info['number'])
                    MDNavigationDrawerDivider:
                    OneLineIconListItem:
                        text:'AddUserInfo'
                        text_color:'#4a5789'
                        on_press:root.add_user()
                        IconLeftWidget:
                            icon:'account-multiple-plus'
                            on_press:root.add_user()
                    OneLineIconListItem:
                        text:'AddUserPhoto'
                        text_color:'#4a5789'
                        on_press:root.add_user_photo()
                        IconLeftWidget:
                            icon:'account'
                            on_press:root.add_user_photo()
                    OneLineListItem:
                        text:'BackHome'
                        on_press:
                            meno.set_state('close')
 
